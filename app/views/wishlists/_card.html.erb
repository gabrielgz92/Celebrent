
<div class="wishlist-content d-flex">
  <div class="card-wishlists cards">
    <div class="username-card">
      <h2>Wish List for</h2>
      <h3><%= current_user.first_name %> ðŸ”¥</h3>
    </div>
      <% @wishlists.each do |wishlist| %>
      <div class="card-wishlist d-flex">
        <%= image_tag(wishlist.celebrity.photo)  %>
        <div class="card-wishlist-infos">
          <h2><%= wishlist.celebrity.full_name %></h2>
          <p><strong><%= wishlist.celebrity.description %></strong></p>
          <%= link_to "book now", celebrity_path(wishlist.celebrity),class: "btn btn-light btn-sm mt-2" %>
        </div>
        <div class="delete-button">
          <%= link_to wishlist_path(wishlist), method: :delete, style: 'color:black;' do %>
            <i class="fas fa-times-circle"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="wishlist-ad">
    <div class="card">
        <div class="promo">
          <p class="mt-3">Sale</p>
        </div>
        <%= image_tag(@celebrity.photo, class: "card-img") %>
        <div class="card-trip-infos">
          <div>
            <h2><%= @celebrity.full_name %></h2>
            <p><%= @celebrity.description %></p>
          </div>
          <h2 class="card-trip-pricing mr-0">$<%= @celebrity.rate_per_hour - 10 %>
          <h2 class="card-trip-pricing line-through">$<%= @celebrity.rate_per_hour %></h2>
          <!-- <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/> -->
        </div>
        <button type="button" class="btn btn-secondary">
          <%= link_to "Book me!", celebrity_path(@celebrity)%></button>
      </div>
  </div>
</div>

