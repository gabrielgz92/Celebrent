<div class="container d-flex">

  <div class="container-photo">
    <%= image_tag(@celebrity.photo, class: "img") %>
  </div>

  <div class="container-info d-flex">
    <div class="container-info-text">
      <h3><%= @celebrity.full_name %></h3>
      <p><%= @celebrity.gender %></p>
      <p><%= @celebrity.date_of_birth.strftime("%F") %></p>
      <p><%= @celebrity.description %></p>
      <%= render 'bookings/form', booking: @booking %>
    </div>
    <div class="map"
      id="map"
      style="width: 300px;
      height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key=<%= ENV['MAPBOX_API_KEY'] %>
    ></div>
  </div>
</div>






