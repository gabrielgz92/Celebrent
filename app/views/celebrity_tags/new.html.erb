
<h1>Add tags to <%= @celebrity.full_name %></h1>
<div class="row">
  <div class="col-sm-6">
    <%= simple_form_for [@celebrity, @celebrity_tag] do |f| %>
      <%= f.input :tag, collection: Tag.list_names,
                  include_blank: false,
                  include_hidden: false,
                  input_html: { multiple: true }
      %>

      <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
